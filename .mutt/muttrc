set realname = "Charlotte Allen"
set from = "takev.takev@gmail.com"
set use_from = yes
set envelope_from = yes
set mailcap_path = ~/.mutt/mailcap

source "~/.privateConfig/mutt/password"
set smtp_url = "smtps://takev.takev@gmail.com@smtp.gmail.com:465/"
set smtp_pass = $my_pass
set imap_user = "takev.takev@gmail.com"
set imap_pass = $my_pass
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set ssl_force_tls = yes
set trash = "imaps://imap.gmail.com/[Gmail]/Trash"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
# G to get mail
bind index G imap-fetch-mail
set editor = "vim -c 'set spell spelllang=en'"
set charset = "utf-8"
set record = ''
set sleep_time = 0
auto_view text/html application/text application/pdf
alternative_order text/enriched text/html text/plain text
bind attach <return>    view-mailcap
set edit_headers=yes
set fast_reply=yes
set include=yes
ignore *
unignore from date subject to cc
unignore organization organization x-mailer: x-newsreader: x-mailing-list:
unignore posted-to:

set query_command="goobook query '%s'"
macro index,pager a "<pipe-message>goobook add<return>" "add sender to google contacts"
bind editor <Tab> complete-query
